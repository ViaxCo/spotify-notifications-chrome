{
  "manifest_version": 3,
  "name": "Spotify Notifications",
  "description": "Displays notifications on song changes on Spotify.",
  "version": "1.0.0",
  "author": "ViaxCo",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://open.spotify.com/*"]
    }
  ],
  "permissions": ["notifications", "tabs", "scripting"],
  "host_permissions": ["https://open.spotify.com/*"],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon.png"
  }
}
